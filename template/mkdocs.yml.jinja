{% if docs_tool == "mkdocs" -%}
site_name: {{ project_name }}
site_description: {{ description }}
repo_url: https://github.com/{{ author_name|lower|replace(' ', '') }}/{{ repo_name }}

theme:
  name: material
  features:
    - navigation.sections
    - navigation.expand

nav:
  - Home: index.md
  - API Reference: api.md

plugins:
  - search
  - include-markdown

markdown_extensions:
  - admonition
  - codehilite
  - toc:
      permalink: true
{% endif %}
